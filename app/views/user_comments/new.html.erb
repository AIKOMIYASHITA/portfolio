<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white"><%= @user.name %>にコメントする</h1>
          <%= form_for @user_comment,url: user_user_comments_path(@user) do |f| %>
          <div class="form-group">
            <%= f.label "コメント", class: 'text-white' %>
            <%= f.text_field :body, class: 'form-control' %>
          </div>

        <%= f.submit "コメントを投稿する", class: 'btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
